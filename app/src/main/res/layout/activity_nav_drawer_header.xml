<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/nav_header"
    android:padding="15dp"
    android:background="@color/teal_700"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".activity.nav_drawer_header">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/compNavDrawerCardView"
        app:cardElevation="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/comp_prof_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:src="@drawable/ic_freshers_live_logo"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/compNameOnNavHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CompName"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compNavDrawerCardView" />

    <TextView
        android:id="@+id/compEmailOnNavHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comp@gmail.com"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compNameOnNavHeader" />



</androidx.constraintlayout.widget.ConstraintLayout>