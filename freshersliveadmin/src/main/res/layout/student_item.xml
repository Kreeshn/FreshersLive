<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:elevation="8dp"
    android:background="@drawable/container_four_round_corner"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/stdName"
            android:text="vikram"/>
        <TextView
            android:layout_below="@+id/stdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stdEmail"
            android:text="vik@gmail.com"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_approved"
            android:background="@drawable/btnborder"
            android:id="@+id/imgApprovestd"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_reject"
            android:background="@drawable/btnborder"
            android:id="@+id/imgRejectstd"/>
    </LinearLayout>


</LinearLayout>